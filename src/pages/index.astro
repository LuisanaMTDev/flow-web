---
import Layout from "../layouts/Layout.astro";
import TasksList from "../components/TasksList.astro";
import InfoHeader from "../components/InfoHeader.astro";
import AddTask from "../components/AddTask.astro";
---

<Layout title="Flow">
  <InfoHeader />
  <main>
    <!-- Provicionales -->
    <TasksList />
    <TasksList />
    <!-- Provicionales -->
  </main>
  <AddTask />
</Layout>

<style>
  main {
    padding-top: 1.5em;
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
    background-color: white;
    height: 100vh;
    gap: 0.5em;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
  }
  body {
    margin: 0px;
    display: flex;
    flex-direction: column;
    background-color: var(--secundary-color);
    color: black;
    height: 100%;
    min-height: 100vh;
  }
</style>
