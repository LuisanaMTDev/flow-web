---
import Layout from "../layouts/Layout.astro";
import StopWatch from "../components/StopWatch.astro";
import TodoList from "../components/TodoList.astro";
---

<Layout title="Flow - Stopwatch">
  <header>
    <StopWatch />
    <div id="sums-of-sections">
      <div class="sum-of-sections">
        <span>00:00:00</span>
        <p>study/work time</p>
      </div>
      <div class="sum-of-sections">
        <span>00:00:00</span>
        <p>study/work time</p>
      </div>
    </div>
  </header>
  <main>
    <h3>Todo List</h3>
    <TodoList />
    <TodoList />
  </main>
</Layout>
<style>
  body {
    background-color: #101010;
    color: white;
  }
  main {
    background-color: black;
    height: 100vh;
    padding-top: 1.5em;
    display: flex;
    flex-direction: column;
    align-items: center;
    border-top-left-radius: 15px;
    border-top-right-radius: 15px;
  }
  h3 {
    font-size: 1.5em;
    margin: 0;
    margin-bottom: 0.5em;
    font-weight: 500;
  }
  #sums-of-sections {
    display: flex;
    justify-content: space-around;
    margin-bottom: 1em;
  }
  .sum-of-sections {
    display: flex;
    flex-direction: column;
    align-items: center;

    span {
      font-size: 1.05em;
    }
    p {
      margin: 0;
      opacity: 0.25;
    }
  }
</style>
